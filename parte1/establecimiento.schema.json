{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "fabiansep.net/data/establecimiento.json",
  "type": "object",
  "properties": {
    "establecimiento": {
      "type": "object",
      "title": "json de un establecimiento",
      "description": "JSON Schema para validar un establecimiento",
      "properties": {
        "name": {
          "type": "string"
        },
        "legalName": {
          "type": "string"
        },
        "email": {
          "type": "string",
		  "format": "email"
        },
        "manager": {
          "type": "string"
        },
        "country": {
          "type": "object",
          "title": "Pais",
          "description": "Pais del establecimiento",
          "properties": {
            "iso31661Code": {
              "type": "string",
              "minLength": 2,
              "maxLength": 2
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "iso31661Code",
            "value"
          ]
        },
        "adress": {
          "type": "object",
          "title": "Direccion",
          "description": "Direccion del establecimiento",
          "properties": {
            "streetAdress": {
              "type": "string"
            },
            "adressLocality": {
              "type": "string"
            },
            "adressRegion": {
              "type": "string"
            }
          },
          "required": [
            "streetAdress",
            "adressLocality",
            "adressRegion"
          ],
          "additionalProperties": false
        },
        "geo": {
          "type": "object",
          "title": "Geolocalizacion",
          "description": "Geolocalizacion del establecimiento",
          "properties": {
            "latitude": {
              "type": "number"
            },
            "longitude": {
              "type": "number"
            }
          },
          "required": [
            "latitude",
            "longitude"
          ],
          "additionalProperties": false
        },
        "openingHours": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 7,
          "uniqueItems": true
        },
        "phoneList": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "\\+[0-9]{12}"
          },
          "minItems": 1,
          "maxItems": 5,
          "uniqueItems": true
        },
        "currenciesAccepted": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength":2,
            "maxLength":3,
          },
          "minItems": 1,
          "maxItems": 5,
          "uniqueItems": true
        },
        "PaymentAccepted": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 5,
          "uniqueItems": true
        },
        "aggregatedRating":{
          "type":"object",
          "title": "Rating del establecimiento",
          "description": "Valoracion del establecimiento por los usuario",
          "properties":{

            "ratingValue":{"type":"number", "minimum":0, "maximum":5},
            "reviewCount":{"type":"integer", "minimum":0}

          },
          "required":["ratingValue","reviewCount"],
          "additionalProperties": false
        }
      },
      "required": [
        "name",
        "legalName",
        "email",
        "manager",
        "country",
        "adress",
        "geo"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "establecimiento"
  ],
  "additionalProperties": false
}
